<config>
    <modules>
        <Addshoppers_Marketingtools>
            <version>1.2.1</version>
        </Addshoppers_Marketingtools>
    </modules>

    <global>
        <!-- Model declaration -->
        <models>
            <addshoppers>
                <class>Addshoppers_Marketingtools_Model</class>
                <resourceModel>addshoppers_mysql4</resourceModel>
            </addshoppers>
        </models>

        <!-- Resources declaration -->
        <resources>
            <addshoppers_setup>
                <setup>
                    <module>Addshoppers_Marketingtools</module>
                    <class>Addshoppers_Marketingtools_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </addshoppers_setup>
            <addshoppers_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </addshoppers_write>
            <addshoppers_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </addshoppers_read>
        </resources>

        <!-- Helper declaration -->
        <helpers>
            <addshoppers>
                <class>Addshoppers_Marketingtools_Helper</class>
            </addshoppers>
        </helpers>

        <!-- Blocks declaration -->
        <blocks>
            <addshoppers>
                <class>Addshoppers_Marketingtools_Block</class>
            </addshoppers>
        </blocks>

    </global>

    <!-- Admin Panel Controller -->
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Addshoppers_Marketingtools after="Mage_Adminhtml">Addshoppers_Marketingtools_Adminhtml</Addshoppers_Marketingtools>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    
    <adminhtml>
        <layout>
            <updates>
                <addshoppers>
                    <file>addshoppers_marketingtools.xml</file>
                </addshoppers>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <addshoppers translate="title" module="addshoppers">
                                            <title>AddShoppers Settings</title>
                                        </addshoppers>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <addshoppers>
                    <file>addshoppers_marketingtools.xml</file>
                </addshoppers>
            </updates>
        </layout>
        <routers>
            <addshoppers>
                <use>standard</use>
                <args>
                    <module>Addshoppers_Marketingtools</module>
                    <frontName>addshoppers</frontName>
                </args>
            </addshoppers>
        </routers>
    </frontend>
    <default>
        <addshoppers>
            <general>
                <default_sort_by>1</default_sort_by>
            </general>
            <settings>
                <enabled>1</enabled>
                <use_schema>1</use_schema>
                <button_code></button_code>
                <active>0</active>
                <email></email>
                <password></password>
                <url></url>
                <platform>magento</platform>
                <category></category>
                <shopid>500975935b3a42793000002b</shopid>
                <social>1</social>
                <opengraph>1</opengraph>
                <logged></logged>
                <account_id></account_id>
            </settings>
        </addshoppers>
    </default>
</config>
